
<div class="reel-cont">
    <div class="row">
      <div class="col-lg-6">
        <h3 class="text-center px-3 mt-5 mb-5">List a new location</h3>
        <%= simple_form_for(@location) do |f| %>
        <%= f.error_notification %>
          <%= f.input :name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "name" }%>
          <%= f.input :address,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "address" }%>
          <%= f.input :available_weekdays, collection: Location::WEEKDAYS,
                                           include_blank: false,
                                           include_hidden: false,
                                           input_html: {
                                            multiple: true
                                          } %>

          <%= f.input :description,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "description" }%>
          <%= f.association :category, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
          <%= f.input :price,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "price" }%>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <div class="form-actions">
          <%= f.button :submit, "List", class: "btn btn-danger btn-block" %>
        </div>
      <% end %>
      </div> <!-- END OF FORM DIV -->
      <div class="col-lg-6" id="list-pic">

      </div> <!-- END OF PIC DIV -->
    </div>
</div>
