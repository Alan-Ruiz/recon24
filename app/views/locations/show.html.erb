<div class="container">
  <div class="row py-4">
    <!-- LEFT SIDE DETAILS -->
    <div class="col-lg-8 col-sm-12">
      <div class="d-flex justify-content-between border-bottom align-items-center">
        <h4><%= @location.name %></h4> <br><br>
        <span class="text-muted font-weight-light"><%= link_to @location.user.username, profile_path(@location.user) %></span>
        <%= link_to "start talking to #{@location.user.username}", chats_path(sender_id: current_user, recipient_id: @location.user), method: :post %>
      </div> <!-- END OF LOCATION NAME -->

      <p class="border-bottom py-3"><%= @location.description %> <br><br>
      <div>
      <h4 class="mt-5">Reviews / <%= @reviews.count %></h4>
        <div class="review-info">
          <% if @location.bookings.nil? %>
            <p>no tienes reviews</p>
          <% else %>
            <% @reviews.each do |review| %>
              <% if review.user != @location.user %>
                <div class="border-bottom my-2">
                  <div class="user-info d-flex justify-content-between">
                    <p><%= review.user.username %></p>
                    <p><% d = review.created_at %> <%= d.strftime('%a %d %b %Y') %></p>
                  </div>
                  <div class="d-flex justify-content-between">
                    <p><%= review.content %></p>
                    <p><i class="fas fa-star"><%=review.rating%></i></p>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div> <!-- END OF REWIWIES -->

      <div class="location">
        <h4 class="mb-3 border-bottom">Location</h4>
        <div id="map" style="width: 100%; height: 500px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div> <!-- END OF LOCATIONS -->
    </div> <!-- END OF COLUMN -->
    <!-- END OFLEFT SIDE DETAILS -->

        <div class="col-lg-4 col-sm-12">
          <div class="booking-dets border rounded p-4">
            <div class="price-top border-bottom"><strong><%= @location.price %></strong>/day</div>
            <div class="dates">
              <%= render './bookings/form' %>
            </div>
          </div>
        </div>
    </div> <!-- END OF ROW -->



</div>
<!-- END OF CONTAINER -->
