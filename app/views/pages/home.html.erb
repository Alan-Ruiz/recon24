<div class="white">
  <div class="container">
    <div class="home">
      <div class="title">
        <h1 id="home-title">Shooting for reel.</h1>
        <p class="strong-p">Finding a filming location has never been so <span id="easy-red">easy</span>.</p>
        <div class="d-flex my-5">
          <div class="mx-4">
            <%= render 'shared/search_bar' %>
          </div>
        </div>
      </div>
    </div> <!-- END OF HOME -->
  </div> <!-- END OF CONTAINER -->
</div><!-- END OF WHITE 1 -->

<div class="black">
  <div class="container">
      <div class="home-categories py-5">
        <h2>Search by category</h2>
        <div class="d-flex justify-content-between">
          <div class="w-50">
            <div id="carouselExampleCaptions" class="carousel slide w-40" data-ride="carousel">
              <div class="carousel-inner">
                <% @categories.each do |category| %>
                <% if category.name == 'kitchen' %>
                  <div class="carousel-item active">
                <% else %>
                <div class="carousel-item">
                <% end %>
                  <img src="https://images.unsplash.com/photo-1556912173-46c336c7fd55?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80" class="d-block w-100" alt="...">
                  <div class="carousel-caption d-none d-md-block">
                    <h2><%= category.name.capitalize %></h2>
                  </div>
                </div>
                <% end %>
              </div>

              <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div> <!-- END OF CAROUSEL LEFT -->
          </div>


          <div class="d-flex justify-content-between mx-5">
            <div class="row">
              <% @categories.each do |cat| %>
                <div class="col-6 text-center">
                  <%=link_to locations_path(utf8: "âœ“", :query => cat.name, button: ""), style:'text-decoration: none;' do %>
                    <h2><%= cat.name.capitalize %></h2>
                  <% end %>
                </div>
              <% end %>
            </div>

          </div> <!-- END OF RIGHT DIV -->

        </div> <!-- END OF D-FLEX -->


      <div class="row d-flex justify-content-center my-5  ">
        <%= render 'shared/show_button' %>
      </div>
    </div> <!-- END OF HOME-CATEGORIES -->
  </div> <!-- END OF CONTAINER 2 -->
</div> <!-- END OF BLACK -->









