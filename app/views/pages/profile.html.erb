<div class="container">
  <h1><%= @user.username %></h1>
  <div class="row">
    <div class="col-lg-3 text-center">
      <div class="border">
        <h2><%= @user.username %></h2>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar"%>
        <p>Avatar</p>
      </div>
    </div>
    <div class="col-lg-9">
      <h2>Listed locations</h2>
      <div class="row">
        <% @user.locations.each do |location| %>
          <div class="col-lg-4">
             <%= link_to location_path(location), class: "card-trip my-3" do %>
              <% if location.photos.attached? %>
                <%= cl_image_tag location.photos[0].key, style:"object-fit: cover; height: 217.8px;" %>
              <% else %>
                <img class="card-img-top" src="https://images.unsplash.com/photo-1518353053542-7ea33d942319?ixlib=rb-1.2.1&auto=format&fit=crop&w=1351&q=80" alt="Card image cap">
              <% end %>
             <% end %>
              <div class="card-trip-infos">
                  <p id="card-title"><%= location.name %></p>
                  <p class="card-trip-pricing"><%= location.price %> EUR</p>
              </div>
              <!-- <p><%= location.description %></p> -->
            </div>  <!-- END OF COL  -->
        <% end %> <!-- END OF FOR EACH -->
      </div> <!-- END OF ROW   ///   LISTED LOCATIONS -->

      <h2>User reviews</h2>
      <div class="d-flex justify-content-between border bottom">
        <% @user_reviews.each do |review| %>
        <p><%= review.user.username %></p>
        <p><%= review.rating %></p>
        <p><%= review.content %></p>
        <% end %>
      </div>

      <h2>Location reviews</h2>
      <div class="border bottom">
        <% @location_reviews.each do |review| %>
        <div class="d-flex justify-content-between">
          <p><%= review.user.username %></p>
          <p><%= review.booking.location.name %></p>
          <p><%= review.rating %></p>
          <p><%= review.content %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
