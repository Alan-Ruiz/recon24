<div class="search-bar">
  <%= form_tag locations_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      placeholder: "  Search for locations", class: "input" %>
    <%= button_tag(type: "submit", class: "search-btn") do %>
        <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>
